{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    },
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "redirects": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/server.js",
      "statusCode": 308
    },
    {
      "source": "/(.*)",
      "destination": "/index.html",
      "statusCode": 308
    }
  ]
}
